{
    "compilerOptions": {
        "composite": true,
        "module": "CommonJS",
        "target": "ES5",
        "esModuleInterop": true,
        "strictNullChecks": true,
        "moduleResolution": "nodenext",
        "lib": [
            "esnext",
            "dom",
            "Webworker"
        ],
        "baseUrl": ".",
    },
    "include": [
        "src/**/*.tsx",
        "src/**/*.ts",
        "src/**/*d.ts"
    ],
    "exclude": [
        "node_modules",
        "**/build",
    ]
}