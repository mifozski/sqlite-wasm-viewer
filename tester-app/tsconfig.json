{
    "compilerOptions": {
        "lib": [
            "esnext",
            "dom",
            "Webworker"
        ],
        "baseUrl": ".",
        "types": ["@types/wicg-file-system-access"],
        "paths": {
            "src/*": [
                "src/*"
            ],
            "sqlite-wasm-viewer": [
                "../viewer/src/index.ts"
            ]
        }
    },
    "include": [
        "src/**/*.tsx",
        "src/**/*.ts",
        "src/**/*d.ts"
    ],
    "exclude": [
        "node_modules",
        "**/build",
    ],
    "references": [
        {
          "path": "../viewer"
        },
      ]
}